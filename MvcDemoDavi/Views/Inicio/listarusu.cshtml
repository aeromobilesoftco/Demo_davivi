@model IEnumerable<MvcDemoDavi.Models.usuario>

@{
    ViewBag.Title = "listarusu";
}

<h2>listarusu</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Guardar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idusuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecnac)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sexo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idusuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecnac)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.sexo)
        </td>
        <td>
            @Html.ActionLink("Modificar", "Editar", new { id=item.idusuario}) |
            @Html.ActionLink("Eliminar", "Eliminar", new { id=item.idusuario })
        </td>
    </tr>
}

</table>
